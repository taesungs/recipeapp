<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Banner Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/menu3_1" />

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무 스테이크"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무 스테이크를 만들어보세요."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재료"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients with Checkboxes -->
        <CheckBox
            android:id="@+id/item3_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="통무"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쌀뜨물"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가쓰오부시육수 800ml"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국간장 40ml"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛술40ml"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="들기름 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버터 80g"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밀가루 2T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item3_1_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우유3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/shop3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트에 재료 추가"/>

        <Button
            android:id="@+id/move3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트로 이동"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조리 단계"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.	무는 껍질 제거 후 2cm 두께로 썰고 쌀뜨물에 넣고 부어준다.\n
2.	그다음 무를 졸이듯 10분간 삶아주고 육수에 국간장, 맛술을 넣는다.\n
3.	그 위에 무를 넣고 10분간 졸여 건져내고 팬에 들기름을 두른다.\n
4.	3번 무를 올려 앞뒤로 구워주고 그릇에 담는다.\n
5.	팬에 버터를 녹이고 밀가루를 넣고 섞고 우유를 넣어 소스를 만들어준다.\n
6.	무 위에 소스를 얹어주면 완성.
"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Share Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기에 레시피 추가"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

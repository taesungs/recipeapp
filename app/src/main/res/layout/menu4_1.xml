<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Banner Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/menu4_1" />

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밤 티라미수"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밤 티라미수를 만들어보세요."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재료"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients with Checkboxes -->
        <CheckBox
            android:id="@+id/item4_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간식 밤 1봉지"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우유 500ml"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="크림치즈 250g"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="통밀 비스킷"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토피넛라테"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생크림 400ml"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초콜릿"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item4_1_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그래놀라"
            android:textSize="16sp"
            android:paddingBottom="8dp" />


        <Button
            android:id="@+id/shop4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트에 재료 추가"/>

        <Button
            android:id="@+id/move4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트로 이동"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조리 단계"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.	간식 밤 1봉지를 우유와 끓인 후 블렌더로 갈아 밤 퓌레를 만든다.\n
2.	만든 밤 퓌레를 크림치즈와 섞어 냉동실에서 30분간 보관해 차갑게 만든 후 생크림과 섞어 밤 크림을 만든다.\n
3.	통밀 비스킷 4개와 토피넛라테를 섞어 베이스를 만들어주고, 만든 크림과 함께 3층으로 쌓는다.\n
4.  그 위에 살짝 얼린 초콜릿을 덮일 정도로 갈아 올린다.\n
5.	마지막으로 프라이팬에 볶은 그래놀라를 올려 크리스피하게 마무리한다.

"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Share Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기에 레시피 추가"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

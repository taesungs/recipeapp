<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Banner Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/menu1_1" />

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제육볶음"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매콤하고 깊은 맛의 제육볶음을 쉽게 만들어보세요."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재료"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ingredients with Checkboxes -->
        <CheckBox
            android:id="@+id/item1_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대패삼겹살"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고추장 1T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고춧가루 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배음료 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매실청 2T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미림 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="올리고당 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참치액젓 2T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진간장 3T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참기름 1T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설탕 2T"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다진마늘"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/item1_1_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후추"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/shop1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트에 재료 추가"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/move1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트로 이동"/>

        <FrameLayout
            android:id="@+id/shop_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />


        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조리 단계"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 마늘을 다진다.\n2. 양파와 대파를 썬다.\n3. 대패삼겹살에 양념을 버무린다.\n4. 기름 달군 팬에 고기를 볶다가\n5. 양파를 넣고\n6. 마무리로 대파를 넣어 볶는다."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Share Button -->
        <Button
            android:id="@+id/favor1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기에 레시피 추가"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

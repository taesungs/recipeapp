<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 검색 바 -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

    <!-- 카테고리 탭 -->
    <LinearLayout
        android:id="@+id/category_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/korea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한식"
            android:backgroundTint="@color/black"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/china"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식"
            android:backgroundTint="@color/black"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/japan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일식"
            android:backgroundTint="@color/black"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/europe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양식"
            android:backgroundTint="@color/black"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- 이미지 버튼과 텍스트 -->
    <LinearLayout
        android:id="@+id/image_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/category_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 첫 번째 이미지 버튼과 텍스트 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/europe1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/europe1"
                android:contentDescription="europe1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나폴리 맛피아"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- 두 번째 이미지 버튼과 텍스트 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/europe2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/europe2"
                android:contentDescription="europe2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="히든천재"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/menu4_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="알리오올리오"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="알리오올리오를 만들어보세요."
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="재료"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/item4_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="링귀네면 300g"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="올리브오일 1/2컵"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="통마늘 7알"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="소금"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="페퍼론치노 2개"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="파슬리 1/4컵"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="파마산 치즈"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/item4_2_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="면수 7T"
            android:textSize="16sp" />


        <Button
            android:id="@+id/shop4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트에 재료 추가"
            android:textStyle="bold" />

        <Button
            android:id="@+id/move4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쇼핑카트로 이동" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="조리 단계"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            android:text="1.	끓는 물에 면을 넣고 3분간 삶고 건져 올리브 오일을 두른다.\n
2.	뚜껑을 덮어 잔열로 익히고 통마늘은 곱게 다져준다.\n
3.	올리브유 두른 팬에 다진 마늘을 넣고 볶고 페퍼론치노 넣고 마저 볶는다.\n
4.	익힌 면과 면수를 넣고 1분간 마저 볶아주고 파슬리와 치즈 올리면 완성.

"
            android:textSize="16sp" />

        <!-- Share Button -->
        <Button
            android:id="@+id/favor4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#000000"
            android:text="즐겨찾기에 레시피 추가"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
